<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/LA_relative"
        android:background="@drawable/custom_header_pdflist_admin"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="Read Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/img_back_Readbook"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Count_page"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="N/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/myPdfViewReadBook"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LA_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
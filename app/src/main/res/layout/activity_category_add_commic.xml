<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE3E5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/custom_category_add"
        android:layout_width="match_parent"
        android:layout_height="355dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logout" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/openbook"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/openbook" />

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="260dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
             android:textSize="30dp"
            android:text="ADD NEW CATEGORY BOOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:endIconMode="clear_text"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:layout_width="355dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_category"
            android:drawableStart="@drawable/ic_category"
            android:hint="  Category"
            android:background="@drawable/custom_button_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_category"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="ADD"
        android:layout_marginBottom="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>